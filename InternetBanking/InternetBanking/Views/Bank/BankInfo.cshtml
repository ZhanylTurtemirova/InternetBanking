@model Bank

@{
    Layout = "_Layout2";
    int increm = 0;
}

<div>
    <section style="margin-top:40px">


        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <h2 class="title">@Model.BankInfo.BankName</h2>
            <table class="table table-bordered">
                <tr>
                    <td>
                        БИК
                    </td>
                    <td>
                        <b> @Model.BIK</b>
                    </td>
                </tr>
                <tr>
                    <td>
                        Email
                    </td>
                    <td>
                        <b>@Model.BankInfo.Email</b>
                    </td>
                </tr>

            </table>
            <a asp-action="Edit" asp-controller="Bank" class="btn btn-default" asp-route-bankId="@Model.Id">Редактировать</a>
        </div>

    </section>
</div>