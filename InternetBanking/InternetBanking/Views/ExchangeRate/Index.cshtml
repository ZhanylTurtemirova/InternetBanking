@model InternetBanking.ViewModels.ExchangeRatesListViewModel

@{
    Layout = "_Layout2";
    ViewData["Title"] = "Курс валют";
}

<section class="form-section">
    <h2 style="margin-top: 34px;">Курс валют </h2>

    <p>
        <a asp-action="Create" class="btn btn-default">Добавить</a>
    </p>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
               
                <th>
                    Код
                </th>
                <th>
                    Валюта
                </th>
                <th>
                    Дата
                </th>
                <th>
                    Курс покупки
                </th>
                <th>
                    Курс продажи
                </th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.exchangeRatesList)
            {
                <tr>
                  
                    <td>
                        @item.Currency.Code 
                    </td>
                    <td>
                        @item.Currency.Name
                    </td>
                    <td>
                        @item.RateDate
                    </td>
                    <td>
                        @item.RateForPurchaise
                    </td>
                    <td>
                        @item.RateForSale
                    </td>
                   
                </tr>
            }
        </tbody>
    </table>
</section>